<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>fr.inria.atlanmod.neoemf.eclipse</groupId>
        <artifactId>fr.inria.atlanmod.neoemf.eclipse.examples</artifactId>
        <version>2.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>fr.inria.atlanmod.neoemf.eclipse.examples.core</artifactId>

    <packaging>eclipse-plugin</packaging>

    <name>NeoEMF Eclipse Examples : Core</name>
    <description>Examples integrated in Eclipse.</description>

    <properties>
        <projects.location>projects</projects.location>
        <projects.classifier>eclipse-project</projects.classifier>
        <projects.type>zip</projects.type>
    </properties>

    <dependencies>

        <dependency>
            <groupId>fr.inria.atlanmod.neoemf.eclipse</groupId>
            <artifactId>fr.inria.atlanmod.neoemf.eclipse.examples.demo</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>fr.inria.atlanmod.neoemf.eclipse</groupId>
            <artifactId>fr.inria.atlanmod.neoemf.eclipse.examples.tutorial</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>fr.inria.atlanmod.neoemf.eclipse</groupId>
            <artifactId>org.eclipse.gmt.modisco.java</artifactId>
            <version>${project.version}</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>

            <!-- Archive packaging -->

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>3.2.0</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>add-resource</goal>
                        </goals>
                        <configuration>
                            <resources>
                                <resource>
                                    <directory>${project.build.directory}/dependency</directory>
                                    <targetPath>${projects.location}</targetPath>
                                    <includes>
                                        <include>*.${projects.type}</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>        
                <configuration>
                    <type>${projects.type}</type>
                    <classifier>${projects.classifier}</classifier>
                    <stripClassifier>true</stripClassifier>
                    <stripVersion>true</stripVersion>
                    <includeGroupIds>${project.groupId}</includeGroupIds>
                    <includeParents>false</includeParents>
                    <excludeTransitive>true</excludeTransitive>
                </configuration>
                <executions>
                    <execution>
                        <id>copy-assemblies</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
