<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
    <extension
            point="org.eclipse.ui.editors">
        <editor
                class="fr.inria.atlanmod.neoemf.eclipse.ui.editor.NeoEditor"
                contributorClass="org.eclipse.emf.ecore.presentation.EcoreActionBarContributor"
                default="false"
                icon="platform:/plugin/org.eclipse.emf.edit/icons/full/obj16/ModelFile.gif"
                id="org.atlanmod.neoemf.eclipse.ui.editor.NeoEditor"
                name="NeoEMF Editor">
        </editor>
    </extension>
    <extension
            point="org.eclipse.emf.importer.modelImporterDescriptors">
        <modelImporterDescriptor
                description="Create the Ecore model based on other Ecore or EMOF models"
                extensions="ecore,emof"
                icon="icons/full/obj16/model.gif"
                id="org.atlanmod.neoemf.ui.modelImporterDescriptor"
                name="Ecore model (NeoEMF Native)"
                wizard="fr.inria.atlanmod.neoemf.eclipse.ui.wizard.NeoModelImporterWizard">
        </modelImporterDescriptor>
    </extension>
    <extension
            point="org.eclipse.ui.menus">
        <menuContribution
                allPopups="false"
                locationURI="popup:org.eclipse.ui.popup.any?after=additions">
            <menu
                    icon="icons/full/obj16/neoemf.png"
                    label="&amp;NeoEMF">
                <command
                        commandid="org.atlanmod.neoemf.eclipse.ui.migrate"
                        style="push">
                    <visibleWhen>
                        <with
                                variable="activeMenuSelection">
                            <iterate
                                    ifEmpty="false">
                                <adapt
                                        type="org.eclipse.core.resources.IFile">
                                    <test
                                            property="org.eclipse.core.resources.extension"
                                            value="genmodel">
                                    </test>
                                </adapt>
                            </iterate>
                        </with>
                    </visibleWhen>
                </command>
                <command
                        commandid="org.atlanmod.neoemf.eclipse.ui.openDB"
                        style="push">
                    <visibleWhen>
                        <with
                                variable="activeMenuSelection">
                            <iterate
                                    ifEmpty="false">
                                <adapt
                                        type="org.eclipse.core.resources.IFolder">
                                    <test
                                            property="fr.inria.atlanmod.neoemf.eclipse.ui.isNeoEMFDB"
                                            value="true">
                                    </test>
                                </adapt>
                            </iterate>
                        </with>
                    </visibleWhen>
                </command>
            </menu>
        </menuContribution>
        <menuContribution
                allPopups="false"
                locationURI="popup:org.eclipse.ui.popup.any?after=additions">
            <command
                    commandid="org.atlanmod.neoemf.eclipse.ui.createDynamicInstance"
                    style="push">
                <visibleWhen>
                    <with
                            variable="activeMenuSelection">
                        <iterate
                                ifEmpty="false">
                            <adapt
                                    type="org.eclipse.emf.ecore.EClass">
                            </adapt>
                        </iterate>
                    </with>
                </visibleWhen>
            </command>
        </menuContribution>
    </extension>
    <extension
            point="org.eclipse.ui.commands">
        <command
                defaultHandler="fr.inria.atlanmod.neoemf.eclipse.ui.command.MigrateCommand"
                id="org.atlanmod.neoemf.eclipse.ui.migrate"
                name="&amp;Migrate EMF Generator Model">
        </command>
        <command
                defaultHandler="fr.inria.atlanmod.neoemf.eclipse.ui.command.OpenBackendCommand"
                id="org.atlanmod.neoemf.eclipse.ui.openDB"
                name="&amp;Open Model Database">
        </command>
        <command
                defaultHandler="fr.inria.atlanmod.neoemf.eclipse.ui.command.CreateDynamicInstanceCommand"
                id="org.atlanmod.neoemf.eclipse.ui.createDynamicInstance"
                name="Create &amp;NeoEMF Dynamic Instance...">
        </command>
    </extension>
    <extension
            point="org.eclipse.core.expressions.propertyTesters">
        <propertyTester
                class="fr.inria.atlanmod.neoemf.eclipse.ui.tester.IsNeoBackendTester"
                id="org.atlanmod.neoemf.eclipse.ui.isNeoEMFDB"
                namespace="fr.inria.atlanmod.neoemf.eclipse.ui"
                properties="isNeoEMFDB"
                type="org.eclipse.core.resources.IFolder">
        </propertyTester>
    </extension>
    <extension
            point="org.eclipse.ui.decorators">
        <decorator
                adaptable="true"
                class="fr.inria.atlanmod.neoemf.eclipse.ui.decorator.NeoDecorator"
                id="org.atlanmod.neoemf.ui.neoDBDecorator"
                label="NeoEMF Database Folder Decorator"
                objectClass="org.eclipse.core.resources.IFolder"
                state="true">
        </decorator>
    </extension>
    <extension
            point="org.eclipse.ui.popupMenus">
        <objectContribution
                adaptable="false"
                id="org.eclipse.ui.articles.action.contribution.popup.object"
                nameFilter="*.ecore"
                objectClass="org.eclipse.core.resources.IFile">
            <action
                    class="fr.inria.atlanmod.neoemf.eclipse.ui.action.RegisterMetamodelAction"
                    icon="icons/full/obj16/register.png"
                    id="org.atlanmod.neoemf.eclipse.ui.action.RegisterMetamodelAction"
                    label="Register EPackages" />
        </objectContribution>
    </extension>
</plugin>
