<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>fr.inria.atlanmod.neoemf.plugins</groupId>
        <artifactId>neoemf-eclipse</artifactId>
        <version>1.0.3-SNAPSHOT</version>
    </parent>

    <artifactId>fr.inria.atlanmod.neoemf.eclipse.update</artifactId>

    <packaging>eclipse-repository</packaging>

    <name>NeoEMF Eclipse Update-Site</name>

    <dependencies>
        <dependency>
            <groupId>fr.inria.atlanmod.neoemf.plugins</groupId>
            <artifactId>fr.inria.atlanmod.neoemf.core.feature</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>fr.inria.atlanmod.neoemf.plugins</groupId>
            <artifactId>fr.inria.atlanmod.neoemf.data.blueprints.core.feature</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>fr.inria.atlanmod.neoemf.plugins</groupId>
            <artifactId>fr.inria.atlanmod.neoemf.data.mapdb.feature</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>fr.inria.atlanmod.neoemf.plugins</groupId>
            <artifactId>fr.inria.atlanmod.neoemf.data.berkeleydb.feature</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>fr.inria.atlanmod.neoemf.plugins</groupId>
            <artifactId>fr.inria.atlanmod.neoemf.data.hbase.feature</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>fr.inria.atlanmod.neoemf.plugins</groupId>
            <artifactId>fr.inria.atlanmod.neoemf.data.blueprints.neo4j.feature</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>fr.inria.atlanmod.neoemf.plugins</groupId>
            <artifactId>fr.inria.atlanmod.neoemf.io.feature</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>fr.inria.atlanmod.neoemf.plugins</groupId>
            <artifactId>fr.inria.atlanmod.neoemf.data.blueprints.neo4j.wrapper.feature</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>tycho-p2-repository-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
